<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Currency_Change.MainPage"
             Shell.NavBarIsVisible="False"
             Loaded="ContentPage_Loaded"
             Padding="24"
             >



    <StackLayout VerticalOptions="Center" Padding="20" Spacing="20">

        <!-- First Vertical Stack for Price Display -->
       
        <!-- Second Vertical Stack for Amount Conversion -->
        <VerticalStackLayout Spacing="20">



           

            <Label Text="0"
                   TextColor="#4CAF50"
                   x:Name="enPriceAfterChanged"
                   FontSize="Title"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />

         

            <Label Text="Enter the amount  :"
               FontSize="Medium"
               HorizontalOptions="Start"
               VerticalOptions="Center" />

            <Entry x:Name="enPriceChange"
               ReturnType="Go"
               Text="0"
               Keyboard="Numeric"
               Placeholder="Enter amount"
               HeightRequest="50"
               BackgroundColor="#f0f0f0"
               TextColor="Black"
               Margin="0,5,0,10"/>

            <Label Text="From  :"
                  FontSize="Medium"
                  HorizontalOptions="Start"
                  VerticalOptions="Center" />

            <Picker x:Name="pkfromCurrency"
                    HeightRequest="40"
                    ItemDisplayBinding="{Binding}" 
                    Margin="0,10,0,0"/>

            <Label Text="To  :"
                   FontSize="Medium"
                   HorizontalOptions="Start"
                   VerticalOptions="Center" />

            <Picker x:Name="pktoCurrency"
                    HeightRequest="40"
                    ItemDisplayBinding="{Binding}" 
                    Margin="0,10,0,0"/>

            <Button Text="Convert"
                Clicked="Button_Clicked_1"
                BackgroundColor="#4CAF50"
                TextColor="White"
                HeightRequest="50"
                CornerRadius="10"
                HorizontalOptions="FillAndExpand" />





        </VerticalStackLayout>

    </StackLayout>


</ContentPage>
